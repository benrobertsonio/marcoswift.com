                        <div class="w-12 h-px bg-brand-primary/50 mb-4 mt-auto" />
                        <div class="flex flex-col">
                            <span class="font-bold text-brand-text font-display text-lg">
                                {review.author}
                            </span>
                            {review.source && (
                                <span class="text-sm text-brand-muted mt-1">
                                    {review.source}
                                </span>
                            )}
                        </div>
                        <div class="text-brand-muted/20 text-4xl mt-4">
